@model Imbali.Models.InfoBox
@{
    ViewData["Title"] = "Detailed View";

    var pastelNumber = new Random().Next(1, 8);
    var containerNumber = pastelNumber switch
    {
        1 => 5,
        2 => 6,
        3 => 4,
        4 => 3,
        5 => 7,
        6 => 2,
        _ => 1
    };
    var pastelClass = $"pastel-bg{pastelNumber}";
    var containerClass = $"container-bg{containerNumber}";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Imbali</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Mulish:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        :root {
            --accent-color: #FF8C42;
            --text-color: #333333;
            --body-font: 'Mulish', sans-serif;
            --title-font: 'Playfair Display', serif;
            --card-bg: rgba(255, 255, 255, 0.92);
            --shadow-light: 0 6px 18px rgba(0, 0, 0, 0.08);
            --shadow-strong: 0 12px 28px rgba(0, 0, 0, 0.15);
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: var(--body-font);
            background: inherit;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            overflow-x: hidden;
        }

        .custom-page-container {
            position: relative;
            background: var(--card-bg);
            background-image: linear-gradient(135deg, rgba(255,140,66,0.06), rgba(255,255,255,0));
            max-width: 1200px;
            width: 95%;
            min-height: 75vh;
            margin: 3rem auto;
            padding: 3rem;
            box-shadow: var(--shadow-strong);
            border-radius: 20px;
            border-left: 8px solid transparent;
            animation: fadeInUp 0.6s ease-out both;
            transition: transform 0.3s ease;
        }

            .custom-page-container:hover {
                transform: translateY(-8px);
            }

        .container-bg1 {
            border-left-color: #FFF9DB;
        }

        .container-bg2 {
            border-left-color: #FFE7E0;
        }

        .container-bg3 {
            border-left-color: #DDEFFF;
        }

        .container-bg4 {
            border-left-color: #C5F7F2;
        }

        .container-bg5 {
            border-left-color: #FBE0EF;
        }

        .container-bg6 {
            border-left-color: #FAF4E6;
        }

        .container-bg7 {
            border-left-color: #E7E0FB;
        }

        .home-btn {
            position: absolute;
            top: 1rem;
            left: 1rem;
            background: var(--accent-color);
            color: white;
            padding: 0.6rem 1.2rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            box-shadow: var(--shadow-light);
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .home-btn:hover {
                background: #e6703c;
                transform: scale(1.05);
            }

        .custom-page-title {
            font-family: var(--title-font);
            font-size: 3.2rem;
            color: var(--accent-color);
            text-align: center;
            margin: 0 0 1.5rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
            position: relative;
        }

            .custom-page-title::after {
                content: '';
                display: block;
                width: 100px;
                height: 4px;
                background: var(--accent-color);
                margin: 0.5rem auto;
                border-radius: 2px;
            }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr;
            grid-gap: 2rem;
            align-items: start;
        }

        @@media (min-width: 768px) {
            .content-grid

        {
            grid-template-columns: 1.5fr 1fr;
        }

        }

        .banner {
            overflow: hidden;
            border-radius: 16px;
            box-shadow: var(--shadow-light);
            position: relative;
        }

            .banner img {
                width: 100%;
                height: auto;
                max-height: 400px;
                object-fit: cover;
                transition: transform 0.5s ease;
                display: block;
            }

            .banner:hover img {
                transform: scale(1.08);
            }

        .custom-content {
            font-size: 1.15rem;
            line-height: 1.8;
            color: var(--text-color);
            hyphens: auto;
        }

            .custom-content p:first-letter {
                font-size: 2.2rem;
                font-weight: 700;
                float: left;
                margin-right: 8px;
                color: var(--accent-color);
                line-height: 1;
            }

            .custom-content a {
                color: var(--accent-color);
                text-decoration: none;
                border-bottom: 2px solid var(--accent-color);
                transition: all 0.3s ease;
            }

                .custom-content a:hover {
                    background: var(--accent-color);
                    color: white;
                    padding: 2px 4px;
                    border-radius: 4px;
                    border-bottom: none;
                }

        .inline-img {
            width: 100%;
            border: 4px solid var(--accent-color);
            border-radius: 16px;
            box-shadow: var(--shadow-light);
            transition: transform 0.3s ease;
            display: block;
            margin-top: 1.5rem;
            max-height: 300px;
            object-fit: contain;
        }

            .inline-img:hover {
                transform: scale(1.03);
            }

        .pastel-bg1 {
            background: #F6F5E8;
        }

        .pastel-bg2 {
            background: #DFEEDB;
        }

        .pastel-bg3 {
            background: #E2F4F1;
        }

        .pastel-bg4 {
            background: #A0B5E8;
        }

        .pastel-bg5 {
            background: #FCE9F0;
        }

        .pastel-bg6 {
            background: #F5E3DF;
        }

        .pastel-bg7 {
            background: #E8C5FA;
        }
    </style>
</head>
<body class="@pastelClass">
    <div class="custom-page-container @containerClass">
        <a href="@Url.Action("Index", "Home")" class="home-btn">← Home</a>
        <h1 class="custom-page-title">@Model.Title</h1>

        <div class="content-grid">
            @if (!string.IsNullOrWhiteSpace(Model.Image))
            {
                <div class="banner">
                    <img src="@Model.Image" alt="Banner for @Model.Title" onerror="this.style.display='none'" />
                </div>
            }

            <div>
                <div class="custom-content">
                    @Html.Raw(Model.Content)
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.InlineImage))
                {
                    <img src="@Model.InlineImage" alt="Illustration for @Model.Title" class="inline-img" onerror="this.style.display='none'" />
                }
            </div>
        </div>
    </div>
</body>
</html>
