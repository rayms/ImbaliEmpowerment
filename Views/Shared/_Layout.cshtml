<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Imbali Empowerment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Imbali.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/ImbaliLogo.png" />


    <style>
       /* ===============================
         Custom Pastel Navbar Styles
       ================================= */
        body {
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            font-family: 'Mulish', sans-serif;
        }

        @@keyframes gradientBG {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }


        .navbar {
            background: linear-gradient(90deg, #f6e3e1, #e2f0cb, #d0e1f9);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            border-bottom: 2px solid #ffd6e0;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 700;
            color: #5C5470 !important;
            text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.7);
        }

        .navbar-nav .nav-link {
            font-weight: 600;
            color: #5C5470 !important;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(255, 214, 224, 0.6);
                color: #ff69b4 !important;
                box-shadow: 0 2px 8px rgba(255, 182, 193, 0.5);
            }

        .navbar-toggler {
            border-color: rgba(255, 182, 193, 0.4);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%2880, 70, 90, 0.7%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        @@media (max-width: 768px) {
            .navbar-brand

        {
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            padding: 0.5rem;
            margin: 0.2rem 0;
            font-size: 1rem;
        }

        .navbar {
            padding: 0.5rem 1rem;
        }

        }

        #topBtn {
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            border: none;
            outline: none;
            background-color: #FFD6D6;
            color: white;
            cursor: pointer;
            padding: 10px;
            border-radius: 50%;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            .navbar

        {
            position: sticky;
            top: 0;
            z-index: 1000;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Imbali Empowerment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ContactUs" asp-action="Index">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Donation" asp-action="Index">Donation</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Imbali Empowerment
        </div>
    </footer>

    <button onclick="scrollToTop()" id="topBtn" title="Go to top">↑</button>
    <script>
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
