    .flip-box {
        background-color: transparent;
        width: 200px;
        height: 250px;
        perspective: 1000px;
        position: relative;
        transition: transform 0.4s ease, width 0.4s ease, height 0.4s ease;
        border-radius: 12px;
        overflow: hidden;
    }

    .flip-box-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transform-style: preserve-3d;
        transition: transform 0.8s;
        border-radius: 12px;
    }

    .flip-box-front {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 12px;
        overflow: hidden;
        z-index: 2;
    }

        .flip-box-front::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 20px; 
            height: 100%;
            background: linear-gradient(to left, rgba(0,0,0,0.1), transparent);
            transform: skewX(-10deg);
            pointer-events: none;
            border-top-right-radius: 12px;
            border-bottom-right-radius: 12px;
        }

            .flip-box:hover {
                transform: scale(1.05);
                z-index: 3;
            }

            .flip-box.clicked:hover {
                transform: none;
                z-index: 1;
            }

            .flip-box.focused:hover {
                transform: scale(1.2);
                z-index: 2;
            }

            .flip-box.focused {
                width: 260px;
                height: 340px;
                transform: scale(1.2);
                z-index: 2;
                box-shadow: none;
                transition: transform 0.4s ease, box-shadow 0.4s ease 0.4s;
            }

                .flip-box.focused.glow {
                    box-shadow: 0 0 20px rgba(255, 182, 193, 0.8), 0 0 30px rgba(255, 192, 203, 0.5);
                }

        .flip-box-container.focused-mode .flip-box:not(.focused) {
            transform: scale(0.7);
            opacity: 0.5;
            z-index: 1;
        }

        .flip-box.focused,
        .flip-box-container.focused-mode .flip-box:not(.focused) {
            animation: none;
        }

        .flip-box-container:not(.focused-mode) .flip-box {
            animation: pulse 6s infinite ease-in-out;
